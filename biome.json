{
    "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
    "organizeImports": {
        "enabled": true,
        "ignore": ["node_modules", "dist", ".nuxt", ".output", "cache"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": ["node_modules", "dist", ".nuxt", ".output", "cache"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": ["node_modules", "dist", ".nuxt", ".output", "cache"]
    }
}
